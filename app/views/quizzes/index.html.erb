<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Answer</th>
      <th>Material ID</th>
      <th>Suborder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.id %></td>
        <td><%= quiz.title %></td>
        <td><%= quiz.content %></td>
        <td><%= quiz.answer %></td>
        <td><%= quiz.material_id %></td>
        <td><%= quiz.suborder %></td>
        <td><%= link_to 'Show', quiz, class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz), class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path, class:"btn btn-outline-secondary" %>
