<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table class="table">
  <thead>
    <tr>
      <th>Material ID</th>
      <th>Material Name</th>
      <th>Course</th>
      <th>Type</th>
      <th>Link</th>
      <th>Final exam</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.id %></td>
        <td><%= material.name %></td>
        <td><%= material.course.name %></td>
        <td><%= material.quiz_type %></td>
        <td><%= material.link %></td>
        <td><%= material.final_exam %></td>
        <td><%= link_to 'Show', material, class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Edit', edit_material_path(material), class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Material', new_material_path, class:"btn btn-outline-secondary" %>
