<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course ID</th>
      <th>Course Name</th>
      <th>Provid Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td><%= course.company %></td>
        <td><%= link_to 'Show', course, class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class:"btn btn-outline-secondary" %>
